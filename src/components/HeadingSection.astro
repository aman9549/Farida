---
import Image from "astro/components/Image.astro";
import image1 from "../images/bg.jpg";

interface Props {
  title?: string;
  description?: string;
}

const { title } = Astro.props;
---

<div class="relative w-full h-[300px]">
  {/* Background image with blue gradient overlay */}
  <div class="absolute inset-0">
    <Image
      src={image1}
      alt={"Aman"}
      class="w-full h-full object-cover opacity-60"
    />
    {/* Blue overlay */}
    <div class="absolute inset-0 bg-neutral-900/10"></div>
    {/* Gradient overlay */}
    <div
      class="absolute inset-0 bg-gradient-to-r from-neutral-900/60 via-neutral-900/20 to-transparent"
    >
    </div>
  </div>

  {/* Text content */}
  <div class="absolute bottom-10 left-96 transform -translate-x-1/2 -translate-y-1/2 text-center">
    <h1 class="text-3xl md:text-5xl font-semibold italic font-serif text-white">{title}</h1></div>
</div>