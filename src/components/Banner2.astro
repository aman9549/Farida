<div class="w-full py-4 md:py-10">
  <!-- First Grid Section -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="relative bg-neutral-100">
      <Image
        src={image1}
        alt="Featured"
        class="h-[350px] md:h-[550px] w-full object-contain"
      />
      <div class="absolute bottom-0 right-0 h-28 w-28 md:h-56 md:w-56">
        <Image
          src={dot}
          alt="Decorative dot"
          class="rotate-180 w-full h-full"
        />
      </div>
    </div>

    <div
      class="flex flex-col items-start justify-center p-4 md:p-6 space-y-3 md:space-y-4"
    >
      <h1 class="text-lg md:text-xl font-semibold">Do It Best</h1>
      <h2 class="text-3xl md:text-4xl italic font-serif font-semibold">
        Treat Yourself
      </h2>
      <p
        class="w-full md:w-96 text-base md:text-lg leading-7 text-neutral-400 font-light"
      >
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent
        ullamcorper quam lacus, et suscipit lectus porta efficitur.
      </p>
      <button
        class="py-3 px-6 md:py-5 md:px-9 bg-neutral-800 text-white hover:bg-neutral-700 transition-colors"
      >
        About Us
      </button>
    </div>
  </div>

  <!-- Second Grid Section -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6 md:mt-0">
    <div
      class="flex flex-col md:order-1 items-start justify-center order-2 relative"
    >
      <div class="p-4 md:p-6 space-y-3 md:space-y-4 md:absolute md:right-10">
        <h1 class="text-lg md:text-xl font-semibold">New Customer Discount</h1>
        <h2 class="text-3xl md:text-4xl italic font-serif font-semibold">
          Discount Voucher
        </h2>
        <p
          class="w-full md:w-96 text-base md:text-lg leading-7 text-neutral-400 font-light"
        >
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent
          ullamcorper quam lacus, et suscipit lectus porta efficitur.
        </p>
        <button
          class="py-3 px-6 md:py-5 md:px-9 bg-neutral-800 text-white hover:bg-neutral-700 transition-colors"
        >
          Contact Us
        </button>
      </div>
    </div>
    <div class="relative bg-neutral-100 md:order-2 order-1">
      <Image
        src={image2}
        alt="Featured"
        class="h-[350px] md:h-[550px] w-full object-contain"
      />
      <div class="absolute top-0 left-0 h-28 w-28 md:h-56 md:w-56">
        <Image src={dot} alt="Decorative dot" class="w-full h-full" />
      </div>
    </div>
  </div>
</div>
