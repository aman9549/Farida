<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
  <!-- Top Navbar -->
  <div class="bg-[#212529] text-white">
    <div class="container mx-auto px-4 lg:px-20 py-2 md:py-4">
      <div class="flex flex-col md:flex-row md:justify-between gap-2 md:gap-0">
        <div class="flex flex-col md:flex-row gap-2 md:gap-6 items-center md:items-baseline">
          <span class="flex items-baseline gap-2 text-xs md:text-sm">
            <i class="fa-solid fa-phone"></i>
            +91- 9673525252
          </span>
          <span class="flex items-baseline gap-2 text-xs md:text-sm">
            <i class="fa-solid fa-envelope"></i>
            uptimiseit@gmail.com
          </span>
        </div>
        <div class="flex gap-4 md:gap-6 items-center justify-center md:justify-start">
        <a href="https://www.instagram.com/faridas_makeup_studio/">
          <i class="fa-brands fa-instagram hover:text-gray-300 cursor-pointer text-sm"></i>
        </a> 
          <i class="fa-brands fa-facebook-f hover:text-gray-300 cursor-pointer text-sm"></i>
          <i class="fa-brands fa-twitter hover:text-gray-300 cursor-pointer text-sm"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navbar -->
  <div class="bg-white">
    <div class="container mx-auto px-4 lg:px-20 py-4">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="z-20">
          <div class="logo">
            <Image src={logo} alt="Logo Image" class="h-12 md:h-16 w-auto" />
          </div>
        </a>

        <!-- Desktop Navigation Links -->
        <div class="hidden md:flex items-center gap-10">
          <ul class="flex gap-10 text-base md:text-sm font-light items-center uppercase">
            <li class="relative group">
              <a href="/" class="text-gray-700 hover:text-pink-500 transition-colors duration-300">Home</a>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-pink-500 transition-all duration-300 group-hover:w-full"></span>
            </li>
            <li class="relative group">
              <a href="/about-us" class="text-gray-700 hover:text-pink-500 transition-colors duration-300">About</a>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-pink-500 transition-all duration-300 group-hover:w-full"></span>
            </li>
            <li class="relative group">
              <a href="/services" class="text-gray-700 hover:text-pink-500 transition-colors duration-300">Service</a>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-pink-500 transition-all duration-300 group-hover:w-full"></span>
            </li>
            <li class="relative group">
              <a href="/gallery" class="text-gray-700 hover:text-pink-500 transition-colors duration-300">Gallery</a>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-pink-500 transition-all duration-300 group-hover:w-full"></span>
            </li>
            <li class="relative group">
              <a href="/contact" class="text-gray-700 hover:text-pink-500 transition-colors duration-300">Contact</a>
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-pink-500 transition-all duration-300 group-hover:w-full"></span>
            </li>
          </ul>
        </div>

        <!-- Mobile Menu Button -->
        <button 
          id="menu-toggle"
          class="md:hidden z-50 text-gray-400 p-2"
          aria-label="Toggle menu"
        >
          <svg 
            id="menu-icon" 
            class="h-6 w-6" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
          <svg 
            id="close-icon" 
            class="h-6 w-6 hidden" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>

        <!-- Mobile Navigation Menu -->
        <div id="nav-menu" class="fixed inset-0 bg-gray-800/95 h-[660px] backdrop-blur-sm transform translate-x-full transition-transform duration-300 ease-in-out md:hidden ">
          <div class="h-full flex flex-col pt-24 px-8">
            <ul class="flex flex-col gap-6 text-lg pt-20 uppercase">
              <li>
                <a href="/" class="text-white hover:text-pink-500 transition-colors duration-300">Home</a>
              </li>
              <li>
                <a href="/about-us" class="text-white hover:text-pink-500 transition-colors duration-300">About</a>
              </li>
              <li>
                <a href="/services" class="text-white hover:text-pink-500 transition-colors duration-300">Service</a>
              </li>
              <li>
                <a href="/gallery" class="text-white hover:text-pink-500 transition-colors duration-300">Gallery</a>
              </li>
              <li>
                <a href="/contact" class="text-white hover:text-pink-500 transition-colors duration-300">Contact</a>
              </li>
            </ul>
            <!-- Mobile Contact Info -->
            <div class="mt-10">
              <div class="flex flex-col gap-4 text-white">
                <span class="flex items-center gap-2">
                  <i class="fa-solid fa-phone"></i>
                  +91- 9673525252
                </span>
                <span class="flex items-center gap-2">
                  <i class="fa-solid fa-envelope"></i>
                  uptimiseit@gmail.com
                </span>
              </div>
              <!-- Mobile Social Icons -->
              <div class="flex gap-6 mt-6">
                <i class="fa-brands fa-instagram text-white hover:text-pink-500 cursor-pointer"></i>
                <i class="fa-brands fa-facebook-f text-white hover:text-pink-500 cursor-pointer"></i>
                <i class="fa-brands fa-twitter text-white hover:text-pink-500 cursor-pointer"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
  const menuToggle = document.getElementById('menu-toggle');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const navMenu = document.getElementById('nav-menu');

  if (menuToggle && menuIcon && closeIcon && navMenu) {
    menuToggle.addEventListener('click', () => {
      const isHidden = navMenu.classList.contains('translate-x-full');
      navMenu.classList.toggle('translate-x-full', !isHidden);
      navMenu.classList.toggle('translate-x-0', isHidden);
      menuIcon.classList.toggle('hidden', isHidden);
      closeIcon.classList.toggle('hidden', !isHidden);
      document.body.style.overflow = isHidden ? 'hidden' : ''; // Prevent background scroll
    });
  }
});

</script>
